---
import Editor from "@components/editor/Editor.svelte";
import Main from '@components/Main.svelte';

const { isDev, state, sitemap, modules } = Astro.props;
---

{isDev ?
  <body>
    <Editor state={state} sitemap={sitemap} modules={modules} client:only>
      <slot name="content-editor" slot="content-editor"/>
      <Main slot="preview" template={state.template} page={state.page} client:load>
        <slot/>
      </Main>
    </Editor>
  </body>
:
  <body>
    <Main template={state.template} page={state.page}>
      <slot/>
    </Main>
  </body>
}
