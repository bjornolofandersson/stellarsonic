---
import Editor from "@components/Editor.svelte";
import Body from '@components/Body.svelte';

const { isDev, template } = Astro.props;
---

{isDev ?
  <Body template={template} client:load>
    <Editor client:only>
      <Fragment slot="sidebar">
        <slot name="editor" />
      </Fragment>
      <div class="styled" slot="preview">
        <slot/>
      </div>
    </Editor>
  </Body>
:
  <Body template={template}>
    <slot/>
  </Body>
}
