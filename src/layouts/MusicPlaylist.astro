---
import Layout from './Layout.astro';
import Schema from '../components/playlist/Schema.astro';
import { MusicMix } from '../lib/interfaces';
import TrackList from '../components/TrackList.svelte';
import Controls from '../components/Controls.svelte';
import * as site from '../settings.yaml';

export interface Props {
  frontmatter: MusicMix;
}

const { frontmatter: playlist } = Astro.props;
const { title, subtitle, description, image, tracks, genres, colors } = playlist

const date = new Date(playlist.date).toDateString();
const bgStyle=`background: url(${image}) 50% 50% / cover no-repeat; opacity: 0.04; transform: scaleX(-1); height: 300px`
---

<Layout title={`${title} - ${site.title}`}>
  <Fragment slot="head-bottom">
    <Schema {...playlist} />
  </Fragment>

  <div style={`background: ${colors[0]}`} class="text-white relative">
    <div class="w-full fixed bg-fixed" style={bgStyle}>
    </div>
    <section class="relative text-white" style="height: 300px;">
      <div class="container mx-auto px-8">
        <div class="p-8 flex text-xs">
          <a href="/" class="mr-4">Stellarsonic</a>
          <a href="/blog" class="mr-4">Blog</a>
          <div class="mr-4">About</div>
        </div>
        <div class="grid grid-cols-12">
          <div class="col-span-12 md:col-span-4">
          </div>
          <div class="col-span-12 md:col-span-8 p-20 mx-8">
          </div>
        </div>
      </div>
    </section>
    <section class="relative text-white" style={`background: ${colors[1]}`}>
      <div class="container mx-auto px-8 grid">
        <div class="grid grid-cols-12 py-20">
          <div class="col-span-12 md:col-span-6 lg:col-span-4">
            <div class="shadow-lg overflow-hidden relative aspect-square" style="padding-bottom: 100%; margin-top: -250px">
              <img class="absolute w-full h-full object-cover" src={image} alt=""/>
            </div>
            <section class="text-white mt-12 md:px-8 py-8">
              <h1 class="text-4xl">{title}</h1>
              <h2 class="text-xl" style={`color: ${colors[2]}`}>{subtitle}</h2>
              <p class="text-white opacity-40 text-sm mt-8">{description}</p>
            </section>
          </div>
          <div class="relative col-span-12 md:col-span-6 lg:col-span-8 md:px-8 lg:px-20">
            <div class="md:-mt-40">
              <Controls client:only playlist={playlist} progressColor={playlist.colors[2]} />
            </div>
            <div class="mt-8 md:mt-20">
              <TrackList client:only playlist={playlist} />
            </div>
          </div>
        </div>
      </div>
    </section>
    <section class="relative bg-slate-200 dark:bg-dark-base">
      <div class="container mx-auto px-8 grid grid-cols-12 text-slate-800">
        <div class="col-span-12 lg:col-span-4 bg-slate-100 dark:bg-dark-base-variant dark:text-stone-300 p-8 py-20 text-right">
          <time class="text-lg text-slate-600 dark:text-white">{date}</time>
        </div>
        <div class="col-span-12 lg:col-span-8 bg-slate-100 dark:bg-dark-base-variant dark:text-stone-300 article p-12 py-20 lg:px-20">
          <slot/>
        </div>
      </div>
    </section>
  </div>
</Layout>


<style>
  .article {
    font-family: 'Roboto', sans-serif;
  }
</style>
