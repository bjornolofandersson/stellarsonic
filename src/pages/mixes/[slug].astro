---
import { CollectionEntry, getCollection } from 'astro:content';
import * as settings from '@settings';
import MenuBar from '@theme/components/MenuBar.svelte';
import MusicPlaylist from '@theme/layouts/MusicPlaylist.svelte';
import Post from '@layouts/Post.astro';

export async function getStaticPaths() {
  const docs = await getCollection('mixes')
  return docs.map(entry => ({
    params: { slug: entry.slug }, props: { entry },
  }));
}

interface Props {
  entry: CollectionEntry<'mixes'>;
}

const { entry } = Astro.props;
const { Content } = await entry.render();
---

<Post entry={entry} collection="mixes">
  <MusicPlaylist slug={entry.slug} data={entry.data} client:load>
    <MenuBar settings={settings} slot="menu" />

    <Fragment slot="article">
      <Content/>
    </Fragment>
  </MusicPlaylist>
</Post>
