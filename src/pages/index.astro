---
import { getCollection } from 'astro:content';
import Featured from '../layouts/PostFeatured.astro';
import SiteHero from '../components/SiteHero.astro';
import Layout from '../layouts/Layout.astro';
import MusicPlaylistPreview from '../components/playlist/Preview.astro';
import * as site from '../settings.yaml';


const posts = await getCollection('mixes');
const sortedPosts = posts.sort((a, b) => {
  return b.data.date.localeCompare(a.data.date);
});

const [featured, ...rest] = sortedPosts;
---

<Layout title={site.title}>
  <SiteHero />

	<Featured image={featured.data.image} slug={featured.slug} collection={featured.collection}>
    <h1 class="text-6xl font-title">{featured.data.title}</h1>
    <h2 class="text-xl text-accent">{featured.data.subtitle}</h2>
    <p class="text-lg block mt-12 font-primary">{featured.data.description}</p>
  </Featured>

  <section class="container mx-auto">
    <div class="text-xl py-20 flex">
      <span class="material-symbols-outlined mr-4">graphic_eq</span>
      <span class="block font-primary">Recent mixtapes</span>
    </div>

    <div class="grid md:grid-cols-1 lg:grid-cols-1 gap-6">
      {rest.slice(0, 3).map(({data, slug}: any) =>
        <MusicPlaylistPreview post={data} slug={slug} />
      )}
    </div>
  </section>
</Layout>
