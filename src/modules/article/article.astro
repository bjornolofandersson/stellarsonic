---
import { PageProps } from '@lib/interfaces';
import type { Article } from './article.server';
import ThemeDev from '@components/ThemeDev.svelte';
import Theme from '@theme/Article.svelte';

interface Props extends PageProps<Article> {}

const { entity, site, edit } = Astro.props;
---

{ edit ?
  <ThemeDev
    name="standard"
    component="Article.svelte"
    content={entity}
    site={site}
    client:load
  >
    <slot/>
  </ThemeDev>
  :
  <Theme data={entity.data} site={site}>
    <slot/>
  </Theme>
}
