---
import Playlist from '@theme/Playlist.svelte';
import type { PageProps } from '@lib/interfaces';
import type { MusicMix } from './playlist.server';
import ThemeDev from '@components/ThemeDev.svelte';

interface Props extends PageProps<MusicMix> {}

const { entity, site, edit } = Astro.props;
---

{ edit ?
  <ThemeDev
    name="standard"
    component="Playlist.svelte"
    content={entity}
    site={site}
    client:load
  >
    <slot/>
  </ThemeDev>
  :
  <Playlist data={entity.data} site={site} client:load>
    <slot/>
  </Playlist>
}
