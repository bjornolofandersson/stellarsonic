---
import PageTheme from './page.svelte';
import { PageProps } from '@lib/interfaces';

interface Props extends PageProps<any> {}

const { entity, navigation, edit } = Astro.props;
---

{ edit ?
  <PageTheme entity={entity} navigation={navigation} client:load>
    <slot/>
  </PageTheme>
:
  <PageTheme entity={entity} navigation={navigation}>
    <slot/>
  </PageTheme>
}
